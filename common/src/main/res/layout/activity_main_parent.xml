<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/main_LBL_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hi"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/main_LBL_GarageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="garage name"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/main_LBL_GarageAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="garage address"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/main_LBL_GarageOpen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="garage open"/>

    <ListView
        android:id="@+id/main_LBL_CarsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>